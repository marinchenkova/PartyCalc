<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="64dp"
    android:layout_margin="16dp"
    >

    <EditText
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_sum"
        android:layout_margin="8dp"
        android:inputType="textCapWords|textPersonName|textAutoCorrect|textAutoComplete"
        android:textSize="20sp"
        android:hint="@string/product_default"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/item_sum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_title"
        android:layout_margin="8dp"
        android:inputType="numberDecimal"
        android:textSize="20sp"
        android:hint="@string/sum_default"
        android:maxLines="1"
        />

</android.support.constraint.ConstraintLayout>